rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Permite que qualquer um crie uma conta (cadastro),
    // mas apenas o usuário autenticado pode ler/modificar seus próprios dados.
    match /users/{userId} {
      allow create;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Para todas as outras coleções, como 'ai-configs',
    // exige que o usuário esteja autenticado para qualquer operação.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}