rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita apenas se o usuário estiver autenticado.
    // Esta é uma regra de segurança básica para proteger contra acesso não autorizado.
    // Futuramente, podemos refinar isso para regras baseadas em papéis de usuário.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
