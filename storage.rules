rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Permite que qualquer pessoa leia os avatares.
    // Essencial para que a tela de chat p√∫blico mostre a imagem do admin.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
